#include <iostream>
#include <string>
using namespace std;
string encryption(string str){
    for(int i=0; i<str.length(); i++){
    str[i] = str[i] + 2;
    }
    return str;
}
string decryption(string str){
    for(int i=0; i<str.length(); i++){
    str[i] = str[i] - 2;
    }
    return str;
}
int main(){
    string str;
    cout<<"Enter String: ";
    cin>>str;
    cout<<"Encrypted string: "<<encryption(str)<<endl;
    string dcrpt;
    cout<<"type dcrpt to check decrypted string ";
    cin>>dcrpt;
    cout<<"Decrypted string: "<<decryption(str)<<endl;
    return 0;
}
